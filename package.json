{
  "name": "7qr",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "dev": "pnpm -- turbo run dev --continue --concurrency=50",
    "dev:dashboard": "pnpm -- turbo run dev --continue --concurrency=50 --filter=@7qr/dashboard...",
    "build": "pnpm -- turbo run build --continue",
    "build:dashboard": "pnpm -- turbo run build --filter=@7qr/dashboard...",
    "lint": "pnpm -- turbo run lint --continue",
    "test": "pnpm -- turbo run test --continue",
    "size": "pnpm -- turbo run size --continue",
    "clean": "pnpm -- turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "HUSKY=0 changeset add",
    "changeset:version": "HUSKY=0 changeset version",
    "changeset:tag": "HUSKY=0 changeset tag",
    "publish:packages": "HUSKY=0 changeset publish",
    "vercel": "vercel"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.1",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/node": "18.11.9",
    "husky": "8.0.3",
    "jira-prepare-commit-msg": "1.7.2",
    "lint-staged": "13.0.2",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.4",
    "tsup": "7.1.0",
    "turbo": "1.10.14",
    "typescript": "5.1.6",
    "vercel": "31.2.3"
  },
  "engines": {
    "npm": ">=8.5.0",
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "$M [$J]"
  }
}
